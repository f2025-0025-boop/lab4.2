#include <iostream>
using namespace std;
int main() {
    string month1,month2,month3;
    float rain1,rain2,rain3;
    float average;
    cout<<"enter the name of month1: ";
    cin>>month1;
    cout<<"enter the rainfall (in inches)"<<month1<<":";
    cin>>rain1;

    cout<<"enter the name of month2: ";
    cin>>month2;
    cout<<"enter the rainfall (in inches)"<<month2<<":";
    cin>>rain2;

    cout<<"enter the name of month3: ";
    cin>>month3;
    cout<<"enter the rainfall (in inches)"<<month3<<":";
    cin>>rain3;

    average=(rain1+ rain2+ rain3)/3;
    cout<<"average rainful of" <<month1<<","<<month2<<","<<month3<<"is"<<average<<"inches"<<endl;


